<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hust.soict.dsai.aims.screen.CartScreenController">
   <top>
      <VBox prefHeight="100.0" prefWidth="50.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="Options">
                     <items>
                        <Menu mnemonicParsing="false" text="UpdateStore">
                          <items>
                            <MenuItem mnemonicParsing="false" text="addBook" />
                              <MenuItem mnemonicParsing="false" text="addCD" />
                              <MenuItem mnemonicParsing="false" text="add DVD" />
                          </items>
                        </Menu>
                        <MenuItem mnemonicParsing="false" text=" View Store" />
                        <MenuItem mnemonicParsing="false" text="View Cart" />
                     </items>
                </Menu>
              </menus>
            </MenuBar>
            <Label prefHeight="73.0" prefWidth="152.0" text="CART" textFill="#266ed299">
               <font>
                  <Font size="50.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="790.0" spacing="10.0">
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
               <children>
                  <Label text="Filter :" />
                  <TextField prefHeight="25.0" prefWidth="124.0" />
                  <RadioButton mnemonicParsing="false" selected="true" text="By ID">
                     <toggleGroup>
                        <ToggleGroup fx:id="filterCategory" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" text="By Title" toggleGroup="$filterCategory" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <padding>
      <Insets right="10.0" />
   </padding>
   <right>
      <VBox alignment="TOP_CENTER" prefHeight="644.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="255.0" prefWidth="300.0">
               <children>
                  <Label contentDisplay="TOP" prefHeight="115.0" prefWidth="133.0" text="      Total:">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label prefHeight="113.0" prefWidth="167.0" text="  0 $" textFill="#040be9">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <rotationAxis>
                        <Point3D />
                     </rotationAxis>
                  </Label>
               </children>
            </HBox>
            <Button contentDisplay="RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="75.0" prefWidth="143.0" style="-fx-background-color: red;" text="Place Order" textAlignment="CENTER" textFill="#e2cacaf7">
               <cursor>
                  <Cursor fx:constant="E_RESIZE" />
               </cursor>
            </Button>
         </children>
      </VBox>
   </right>
   <left>
      <TableView fx:id="tblMedia" editable="true" maxHeight="-Infinity" prefHeight="550.0" prefWidth="1091.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colMediaTitle" minWidth="30.0" prefWidth="250.0" text="Title" />
          <TableColumn fx:id="colMediacategory" minWidth="30.0" prefWidth="250.0" text="Category" />
            <TableColumn fx:id="colMediaCost" minWidth="30.0" prefWidth="250.0" text="Cost" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </TableView>
   </left>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
            <Button mnemonicParsing="false" text="Play" />
          <Button mnemonicParsing="false" text="Remove" />
        </buttons>
      </ButtonBar>
   </bottom>
</BorderPane>
